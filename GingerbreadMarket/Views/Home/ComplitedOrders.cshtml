@model IEnumerable<Order>

<div class="panel-body">
    <table class="table table-striped table-condensed">
        <thead>
            <tr><th>ID</th><th>Цена, $</th><th>Количество</th><th>Email</th><th>На продажу?</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Price</td>
                        <td>@item.Count</td>
                        <td>@item.Email</td>
                        <td>@item.IsSell</td>
                        <td>
                            @Html.ActionLink("Удалить", "Remove",
                                 new { id = item.Id },
                                 new { @class = "btn btn-xs btn-danger" })
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>